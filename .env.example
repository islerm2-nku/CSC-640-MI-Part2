# Database Configuration
DB_DRIVER=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app
DB_USER=appuser
DB_PASSWORD=apppass

# GitHub OAuth Configuration
OAUTH_CLIENT_ID=your_github_client_id_here
OAUTH_CLIENT_SECRET=your_github_client_secret_here
OAUTH_REDIRECT_URI=http://localhost/auth/callback
OAUTH_AUTHORIZATION_URL=https://github.com/login/oauth/authorize
OAUTH_TOKEN_URL=https://github.com/login/oauth/access_token
OAUTH_USERINFO_URL=https://api.github.com/user

# JWT Configuration
JWT_SECRET_KEY=your-very-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=true
ENVIRONMENT=development
